<isif condition="${pdict.display.compare && product.productType !== 'set' && product.productType !== 'bundle'}">
    <div class="c-product-tile__tile-body__footer__compare__custom-control text-right">
        <input type="checkbox" id="${product.id}" class="c-product-tile__tile-body__footer__compare__custom-control__checkbox" value="true" />
        <label class="c-product-tile__tile-body__footer__compare__custom-control__label" for="${product.id}">${Resource.msg('checkbox.tile.compare', 'product', null)}</label>
     </div>
</isif>
