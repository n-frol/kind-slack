<isif condition="${(!empty(parentHeading) || !empty(parentBody))}">
    <div class="row c-media-grid__parent-header th-kind-media-grid__parent-header page-offset-top page-offset-bottom">
        <div class="col-12 text-center">
            <isif condition="${!empty(parentHeading)}">
                <h1 class="c-media-grid__parent-header__heading">${parentHeading}</h1>
            </isif>
            <isif condition="${!empty(parentBody)}">
                <div>${parentBody}</div>
            </isif>
        </div>
    </div>
</isif>
