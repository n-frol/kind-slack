<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">

    <type-extension type-id="Category">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="categorySlug">
                <display-name xml:lang="x-default">Category Slug</display-name>
                <description xml:lang="x-default">URL slug for SEO purposes.</description>
                <type>string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="ExternalSearch">
                <display-name xml:lang="x-default">Search Engine Optimization Support</display-name>
                <attribute attribute-id="pageTitle" system="true"/>
                <attribute attribute-id="pageDescription" system="true"/>
                <attribute attribute-id="pageKeywords" system="true"/>
                <attribute attribute-id="pageURL" system="true"/>
                <attribute attribute-id="categorySlug"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

</metadata>
