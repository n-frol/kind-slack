<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
  <type-extension type-id="SitePreferences">
    <custom-attribute-definitions>
      <attribute-definition attribute-id="PR_Online_Status">
        <display-name xml:lang="x-default">PowerReviews Online Status</display-name>
        <description xml:lang="x-default">Turn on/off integration</description>
        <type>boolean</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
      </attribute-definition>

      <attribute-definition attribute-id="PRApiKey">
        <display-name xml:lang="x-default">API Key</display-name>
        <type>string</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <min-length>0</min-length>
      </attribute-definition>

      <attribute-definition attribute-id="PRID">
        <display-name xml:lang="x-default">PowerReviews GroupID</display-name>
        <type>string</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <min-length>0</min-length>
      </attribute-definition>

      <attribute-definition attribute-id="PROrderFeedFileName">
        <display-name xml:lang="x-default">PowerReviews Order Feed File Name</display-name>
        <description xml:lang="x-default">Use orderFeed as the base of the name, followed by an underscore and then your business name. If you have multiple Sites, please append an underscore and the Site Name to the file name. Example: orderFeed_MySite_SiteGenesis</description>
        <type>string</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <min-length>0</min-length>
      </attribute-definition>

      <attribute-definition attribute-id="PRProductFeedFileName">
        <display-name xml:lang="x-default">PowerReviews Product Feed File Name</display-name>
        <description xml:lang="x-default">Use productFeed as the base of the name, followed by an underscore and then your business name. If you have multiple Sites, please append an underscore and the Site Name to the file name. Example: productFeed_MySite_SiteGenesis</description>
        <type>string</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <min-length>0</min-length>
        <field-length>0</field-length>
        <default-value>productFeed</default-value>
      </attribute-definition>

      <attribute-definition attribute-id="PR_Sign_In">
        <display-name xml:lang="x-default">PowerReviews Sign In Requirement</display-name>
        <description xml:lang="x-default">Require registered customer to write reviews</description>
        <type>boolean</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <default-value>false</default-value>
      </attribute-definition>

      <attribute-definition attribute-id="defaultCatalogId">
        <display-name xml:lang="x-default">Default Catalog ID For the site</display-name>
        <type>string</type>
        <mandatory-flag>false</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <min-length>0</min-length>
      </attribute-definition>
      <attribute-definition attribute-id="PRLocalesConfigs">
        <display-name xml:lang="x-default">PowerReviews Locale Configs</display-name>
        <type>set-of-string</type>
        <mandatory-flag>true</mandatory-flag>
        <externally-managed-flag>false</externally-managed-flag>
        <field-length>100</field-length>
      </attribute-definition>
    </custom-attribute-definitions>
    <group-definitions>
      <attribute-group group-id="PowerReviews">
        <display-name xml:lang="x-default">Power Reviews</display-name>
        <attribute attribute-id="PR_Online_Status"/>
        <attribute attribute-id="PRApiKey"/>
        <attribute attribute-id="PRID"/>
        <attribute attribute-id="defaultCatalogId"/>
        <attribute attribute-id="PR_Sign_In"/>
        <attribute attribute-id="PROrderFeedFileName"/>
        <attribute attribute-id="PRProductFeedFileName"/>
        <attribute attribute-id="PRLocalesConfigs"/>
      </attribute-group>
    </group-definitions>
  </type-extension>

</metadata>
