        <attribute-definition attribute-id="visibleBenefits">
                <display-name xml:lang="x-default">Visible Benefits</display-name>
                <description xml:lang="x-default">The number of benefits visible on a PDP before hiding the rest in an accordion.</description>
                <type>double</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>5.0</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Storefront Configs">
                <display-name xml:lang="x-default">Storefront Configurations</display-name>
                <attribute attribute-id="listPriceDefault"/>
                <attribute attribute-id="GoogleVerificationTag"/>
                <attribute attribute-id="buildNotificationEmailList"/>
                <attribute attribute-id="enableStorePickUp"/>
                <attribute attribute-id="countryCode"/>
                <attribute attribute-id="customerServiceEmail"/>
                <attribute attribute-id="mapAPI"/>
                <attribute attribute-id="niceInContactUrl"/>
                <attribute attribute-id="visibleBenefits"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="Product">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="benefits">
                <display-name xml:lang="x-default">Benefits</display-name>
                <type>set-of-string</type>
                <localizable-flag>false</localizable-flag>
                <site-specific-flag>false</site-specific-flag>
                <mandatory-flag>false</mandatory-flag>
                <visible-flag>false</visible-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <order-required-flag>false</order-required-flag>
                <externally-defined-flag>false</externally-defined-flag>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="productDetails">
                <display-name xml:lang="x-default">Product Details</display-name>
                <attribute attribute-id="containerType"/>
                <attribute attribute-id="totalItemQuantity"/>
                <attribute attribute-id="productType"/>
                <attribute attribute-id="benefits"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
