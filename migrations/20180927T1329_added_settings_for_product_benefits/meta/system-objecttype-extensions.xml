<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="Content">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="link">
                <display-name xml:lang="x-default">Link</display-name>
                <type>html</type>
                <localizable-flag>false</localizable-flag>
                <site-specific-flag>false</site-specific-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Content">
                <display-name xml:lang="x-default">Content</display-name>
                <attribute attribute-id="body"/>
                <attribute attribute-id="link"/>
