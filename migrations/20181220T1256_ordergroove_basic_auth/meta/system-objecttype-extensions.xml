                <display-name xml:lang="x-default">OrderGroove Basic Username</display-name>
                <description xml:lang="x-default">The basic authorization username credential is sent from OrderGroove in the header and must be validated and matched to process the request for recurring order placement.</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <field-length>0</field-length>
                <default-value></default-value>
            </attribute-definition>
            <attribute-definition attribute-id="OrderGrooveBasicPass">
