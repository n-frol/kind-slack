<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="cartShowEditLink">
                <display-name xml:lang="x-default">Shows or hides the edit item link on the cart page</display-name>
                <description xml:lang="x-default">When set to true, the edit item link is rendered on the cart page. When set to false, it is not.</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>false</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="CartConfiguration">
                <display-name xml:lang="x-default">Cart Page Configurations</display-name>
                <attribute attribute-id="cartShowEditLink"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>